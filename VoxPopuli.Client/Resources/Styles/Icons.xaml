    <!-- Time & Date -->
    <x:String x:Key="IconClock">🕐</x:String>             <!-- Material: &#xe192; -->
    <x:String x:Key="IconCalendar">📅</x:String>          <!-- Material: &#xe935; -->
    <x:String x:Key="IconTimer">⏱</x:String>              <!-- Material: &#xe425; -->
    
    <!-- Arrow & Direction -->
    <x:String x:Key="IconArrowUp">↑</x:String>            <!-- Material: &#xe316; -->
    <x:String x:Key="IconArrowDown">↓</x:String>          <!-- Material: &#xe313; -->
    <x:String x:Key="IconArrowLeft">←</x:String>          <!-- Material: &#xe314; -->
    <x:String x:Key="IconArrowRight">→</x:String>         <!-- Material: &#xe315; -->
    
    <!-- Toggle & Check -->
    <x:String x:Key="IconCheck">✓</x:String>              <!-- Material: &#xe5ca; -->
    <x:String x:Key="IconCheckCircle">✓</x:String>        <!-- Material: &#xe86c; -->
    <x:String x:Key="IconRadioOn">◉</x:String>            <!-- Material: &#xe837; -->
    <x:String x:Key="IconRadioOff">○</x:String>           <!-- Material: &#xe836; -->
    
</ResourceDictionary>
