<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="VoxPopuli.Client.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:VoxPopuli.Client"
    xmlns:views="clr-namespace:VoxPopuli.Client.Views"
    Title="VoxPopuli.Client"
    FlyoutBehavior="Disabled">

    <ShellContent
        Title="Accueil"
        ContentTemplate="{DataTemplate views:StartPage}"
        Route="StartPage" />

    <ShellContent
        Title="Simulation"
        ContentTemplate="{DataTemplate views:SimulationPage}"
        Route="SimulationPage" />

</Shell>
