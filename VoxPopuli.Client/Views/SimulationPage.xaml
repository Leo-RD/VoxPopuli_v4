<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             x:Class="VoxPopuli.Client.Views.SimulationPage"
             Title="Vox Populi 4.0 - Simulation">

    <Grid RowDefinitions="*, Auto">
        <skia:SKCanvasView x:Name="SimulationCanvas"
                           Grid.Row="0"
                           PaintSurface="OnCanvasPaintSurface"
                           EnableTouchEvents="True" />

        <Border Grid.Row="1" Stroke="#CCCCCC" StrokeThickness="1" BackgroundColor="#F5F5F5" Padding="10">
            <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                <Label Text="{Binding AgentCount, StringFormat='Population: {0}'}" VerticalOptions="Center" FontAttributes="Bold"/>
                <Button Text="RÃ©initialiser" Command="{Binding ResetSimulationCommand}" />
                <Button Text="Lancer Event A/B" Command="{Binding TriggerEventCommand}" BackgroundColor="#512BD4" TextColor="White"/>
            </HorizontalStackLayout>
        </Border>
    </Grid>

</ContentPage>